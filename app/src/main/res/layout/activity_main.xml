<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Primeira Questão -->
        <TextView
            android:id="@+id/question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Área: Matemática - Quanto é 5 + 3?"
            android:textSize="18sp"
            android:padding="8dp"/>

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton android:id="@+id/option1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"/>

            <RadioButton android:id="@+id/option1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"/>

            <RadioButton android:id="@+id/option1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"/>

            <RadioButton android:id="@+id/option1_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"/>

            <RadioButton android:id="@+id/option1_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"/>
        </RadioGroup>

        <!-- Segunda Questão -->
        <TextView
            android:id="@+id/question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Área: Geografia - Qual o maior continente?"
            android:textSize="18sp"
            android:padding="8dp"/>

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton android:id="@+id/option2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ásia"/>

            <RadioButton android:id="@+id/option2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="África"/>

            <RadioButton android:id="@+id/option2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Europa"/>

            <RadioButton android:id="@+id/option2_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="América do Norte"/>

            <RadioButton android:id="@+id/option2_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oceania"/>
        </RadioGroup>

        <!-- Terceira Questão -->

        <TextView
            android:id="@+id/question3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Área: Ciência - Qual o símbolo químico da água?"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton android:id="@+id/option3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O2"/>

            <RadioButton android:id="@+id/option3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H2O"/>

            <RadioButton android:id="@+id/option3_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CO2"/>

            <RadioButton android:id="@+id/option3_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NaCl"/>

            <RadioButton android:id="@+id/option3_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CH4"/>
        </RadioGroup>

        <!-- Botões -->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verificar Respostas"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reiniciar Quiz"
            android:layout_marginTop="8dp"/>

        <!-- Feedback final -->
        <TextView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:text=""/>
    </LinearLayout>
</ScrollView>
